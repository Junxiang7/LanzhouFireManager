@using WebDemo.Lib;
@using WebDemo.Models;
@{
    ViewBag.Title = "SecondWorkstation";
}
@section HeadScript{
    <script src="@Url.Content("/Scripts/My97DatePickerBeta/WdatePicker.js")"></script>
    <script src="@Url.Content("/Scripts/OrderManager.js")"></script>
}
<style type="text/css">
    .contenttable td {
        padding: 3px;
    }

    .contenttable label {
        cursor: pointer;
    }

    #D_Ip {
        width: 200px;
        height: 100px;
        max-width: 200px;
        max-height: 100px;
        resize: none;
    }
</style>

<div style="margin-left:10px;margin-top:15px;">
    产品ID：<input type="text" id="Q_ProductId" />   &nbsp;&nbsp; 订单编码：<input type="text" id="Q_EncodingOrder" /> &nbsp;&nbsp;  订单状态：
    <select id="Q_OrderStatus">
        <option value="1002" selected="selected">已经充粉，等待组装</option>
    </select>
    &nbsp;&nbsp;  订单时间：<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />至<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />
    &nbsp;&nbsp; <input type="button" value="查询" id="Q_Query" class="easyui-linkbutton" style="width:80px" />
</div>
<div style="margin-top:25px">
    <table class="easyui-datagrid" id="DataList" style="width:100%; " data-options="singleSelect:true,collapsible:true,url:'/OrderManager/WorkstationOrder?OrderStatus=1002&Type=1',method:'post',rownumbers:true,pagination:true">
        <thead>
            <tr>
                <th data-options="field:'CreateTime',width:fixWidth(0.15),align:'center'">创建时间</th>
                <th data-options="field:'ProductId',width:fixWidth(0.15),align:'center'">产品ID</th>
                <th data-options="field:'EncodingOrder',width:fixWidth(0.14),align:'center'">订单编码</th>
                <th data-options="field:'CusCompany',width:fixWidth(0.15),align:'center'">客户公司名称</th>
                <th data-options="field:'KgNum',width:fixWidth(0.13),align:'center'">公斤数</th>
                <th data-options="field:'OrderStatusTest',width:fixWidth(0.1),align:'center'">状态文本</th>
                <th data-options="field:'OrderId',width:fixWidth(0.15),align:'center',formatter:EditData">操作</th>
            </tr>
        </thead>
    </table>
</div>
<div id="CusInfo" class="easyui-dialog" style="" data-options="closed:true,title:'客户信息',width:'550',height:'150' ,model:true,resizable:false">

</div>

<div id="LogInfo" class="easyui-dialog" style="" data-options="closed:true,title:'操作日志',width:'550',height:'150' ,model:true,resizable:false">

</div>

