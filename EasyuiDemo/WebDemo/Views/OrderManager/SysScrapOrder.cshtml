
@{
    ViewBag.Title = "SysScrapOrder";
}
@section HeadScript{
    <script src="@Url.Content("/Scripts/My97DatePickerBeta/WdatePicker.js")"></script>
    <script src="@Url.Content("/Scripts/OrderManager.js?v=1.113")"></script>
     <link href="~/Scripts/jquery-easyui/themes/bootstrap/easyui.css" rel="stylesheet" />
}
<style type="text/css">
    .contenttable td {
        padding: 3px;
    }

    .contenttable label {
        cursor: pointer;
    }

    #D_Ip {
        width: 200px;
        height: 100px;
        max-width: 200px;
        max-height: 100px;
        resize: none;
    }
</style>

<div style="margin-left:10px;margin-top:15px;">
    产品ID：<input type="text" id="Q_ProductId" />   &nbsp;&nbsp;  订单状态：
    <select id="Q_OrderStatus">
        <option value="1006" selected="selected">已经报废</option>
    </select>
    &nbsp;&nbsp;  订单时间：<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />至<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />
    &nbsp;&nbsp; <input class="easyui-linkbutton" style="width:80px" type="button" value="查询" id="Q_Query"  />
</div>
<div style="margin-top:25px">
    <table class="easyui-datagrid" id="DataList" style="width:100%; " data-options="singleSelect:true,collapsible:true,url:'/OrderManager/WorkstationOrder?OrderStatus=1006',method:'post',rownumbers:true,pagination:true">
        <thead>
            <tr>
                <th data-options="field:'CreateTime',width:fixWidth(0.15),align:'center'">创建时间</th>
                <th data-options="field:'ProductId',width:fixWidth(0.15),align:'center'">产品ID</th>
                <th data-options="field:'CusCompany',width:fixWidth(0.15),align:'center'">客户公司名称</th>
                <th data-options="field:'OrderStatusTest',width:fixWidth(0.1),align:'center'">状态文本</th>
                <th data-options="field:'Id',width:fixWidth(0.15),align:'center',formatter:EditData">操作</th>
            </tr>
        </thead>
    </table>
</div>
<div id="CusInfo" class="easyui-dialog" style="" data-options="closed:true,title:'客户信息',width:'550',height:'150' ,model:true,resizable:false">

</div>

<div id="LogInfo" class="easyui-dialog" style="" data-options="closed:true,title:'操作日志',width:'550',height:'150' ,model:true,resizable:false">

</div>
<div id="ScrapInfo" class="easyui-dialog" style="" data-options="closed:true,title:'报废录入',width:'550',height:'150' ,model:true,resizable:false">
    <div id="div_ScrapInfo"></div>
    <div style="text-align:center"><input type='button' value='录入' class="easyui-linkbutton" style="width:80px" id='btnScrap' /></div>
</div>


