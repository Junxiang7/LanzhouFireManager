@using WebDemo.Lib;
@using WebDemo.Models;
@{
    ViewBag.Title = "Operator";
}
@section HeadScript{
    <script src="@Url.Content("/Scripts/My97DatePickerBeta/WdatePicker.js")"></script>
    <script src="@Url.Content("/Scripts/Operator.js?v=1.233321")"></script>
}
<style type="text/css">
    .contenttable td {
        padding: 3px;
    }

    .contenttable label {
        cursor: pointer;
    }

    #D_Ip {
        width: 200px;
        height: 100px;
        max-width: 200px;
        max-height: 100px;
        resize: none;
    }
</style>

<div style="margin-left:10px;margin-top:15px;">
    操作人：<input type="text" id="Q_Operator" /> 
    &nbsp;&nbsp;  订单时间：<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />至<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />
    &nbsp;&nbsp; <input type="button" value="查询" id="Q_Query" class="easyui-linkbutton" style="width:80px" />
</div>
<div style="margin-top:25px">
    <table class="easyui-datagrid" id="DataList" style="width:100%; " data-options="singleSelect:true,collapsible:true,url:'/SysTools/UserListJsonOperator',method:'post',rownumbers:true,pagination:true">
        <thead>
            <tr>
                <th data-options="field:'OperationTime',width:fixWidth(0.15),align:'center'">操作时间</th>
                <th data-options="field:'Operator',width:fixWidth(0.10),align:'center'">操作人</th>
                <th data-options="field:'OperationName',width:fixWidth(0.10),align:'center'">操作名称</th>
                <th data-options="field:'OperationContent',width:fixWidth(0.30),align:'center'">操作内容</th>
                <th data-options="field:'HidOperationContent',width:fixWidth(0.30),align:'center',hidden:'true'">隐藏内容</th>
                <th data-options="field:'OrderId',width:fixWidth(0.10),align:'center',formatter:EditData">操作</th>
            </tr>
        </thead>
    </table>
</div>

<div id="LogInfo" class="easyui-dialog" style="" data-options="closed:true,title:'操作日志',width:'550',height:'150' ,model:true,resizable:false">

</div>
