@using WebDemo.Lib;
@using WebDemo.Models;
@{
    ViewBag.Title = "Externalsearch";
}
@section HeadScript{
    <script src="@Url.Content("/Scripts/My97DatePickerBeta/WdatePicker.js")"></script>
    <script src="@Url.Content("/Scripts/Externalsearch.js?v=1.23237661")"></script>
}
<style type="text/css">
    .contenttable td {
        padding: 3px;
    }

    .contenttable label {
        cursor: pointer;
    }

    #D_Ip {
        width: 200px;
        height: 100px;
        max-width: 200px;
        max-height: 100px;
        resize: none;
    }
</style>

<div style="margin-left:10px;margin-top:15px;">
    Ip：<input type="text" id="Q_Ip" /> 
    &nbsp;&nbsp;  订单时间：<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />至<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />
    &nbsp;&nbsp; <input type="button" value="查询" id="Q_Query" class="easyui-linkbutton" style="width:80px" />
</div>
<div style="margin-top:25px">
    <table class="easyui-datagrid" id="DataList" style="width:100%; " data-options="singleSelect:true,collapsible:true,url:'/SysTools/UserListJsonExternalsearch',method:'post',rownumbers:true,pagination:true">
        <thead>
            <tr>
                <th data-options="field:'CreateTime',width:fixWidth(0.15),align:'center'">创建时间</th>
                <th data-options="field:'Ip',width:fixWidth(0.15),align:'center'">Ip</th>
                <th data-options="field:'ConditionStr',width:fixWidth(0.14),align:'center'">查询条件</th>
                <th data-options="field:'Content',width:fixWidth(0.15),align:'center'">查询内容</th>
                <th data-options="field:'HidContent',width:fixWidth(0.13),align:'center',hidden:'true'"></th>
                <th data-options="field:'id',width:fixWidth(0.15),align:'center',formatter:EditData">操作</th>
            </tr>
        </thead>
    </table>
</div>

<div id="LogInfo" class="easyui-dialog" style="" data-options="closed:true,title:'操作日志',width:'700',height:'350' ,model:true,resizable:false">

</div>