@using WebDemo.Lib;
@using WebDemo.Models;
@{
    ViewBag.Title = "订单统计";
}

@section HeadScript{
    <script src="@Url.Content("/Scripts/My97DatePickerBeta/WdatePicker.js")"></script>
    <script src="@Url.Content("/Scripts/OrderStatisti.js?v=1.155998")"></script>
}
<style type="text/css">
    .contenttable td {
        padding: 3px;
    }

    .contenttable label {
        cursor: pointer;
    }

    #D_Ip {
        width: 200px;
        height: 100px;
        max-width: 200px;
        max-height: 100px;
        resize: none;
    }
</style>

<div style="margin-left:10px;margin-top:15px;">
    订单编码:  <input type="text" id="Q_EncodingOrder" />&nbsp;&nbsp;订单时间：<input type="text" id="D_EffectiveTime_s" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />至<input type="text" id="D_EffectiveTime_e" class="Wdate" onFocus="WdatePicker({isShowWeek:true})" />
    <input type="button" value="查询" id="Q_Query" class="easyui-linkbutton" style="width:80px" />
</div>
<div style="margin-top:25px">
    <table class="easyui-datagrid" id="DataList" style="width:100%; " data-options="singleSelect:true,collapsible:true,url:'/OrderStatisti/OrderStatistiListJson',method:'post',rownumbers:true,pagination:true">
        <thead>
            <tr>
                <th data-options="field:'CusCompany',width:fixWidth(0.14),align:'center'">客户公司名称</th>
                <th data-options="field:'EncodingOrder',width:fixWidth(0.14),align:'center'">订单编码</th>
                <th data-options="field:'KgNum',width:fixWidth(0.10),align:'center'">公斤</th>
                <th data-options="field:'EncodCount',width:fixWidth(0.10),align:'center'">合计(个)</th>
                <th data-options="field:'ProductNum',width:fixWidth(0.10),align:'center'">已修(个)</th>
                <th data-options="field:'ScrapNum',width:fixWidth(0.10),align:'center'">报废(个)</th>
                <th data-options="field:'WaitRepair',width:fixWidth(0.10),align:'center'">待修(个)</th>
            </tr>
        </thead>
    </table>

</div>

